<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="36dp"
    android:layout_marginVertical="16dp">

    <ImageView
        android:id="@+id/share_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_ios_share_24"
        app:layout_constraintEnd_toEndOf="@+id/share_txt"
        app:layout_constraintStart_toStartOf="@+id/share_txt"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/share_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share_word"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/share_img"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/like_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_bookmark_border"
        app:layout_constraintEnd_toEndOf="@+id/like_txt"
        app:layout_constraintStart_toStartOf="@+id/like_txt"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/saved_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_bookmark_filled"
        app:layout_constraintEnd_toEndOf="@+id/saved_txt"
        app:layout_constraintStart_toStartOf="@+id/saved_txt"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/like_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_word"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/like_img"
        android:textStyle="bold"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/saved_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/saved_word"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/saved_img"
        android:textStyle="bold"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>
